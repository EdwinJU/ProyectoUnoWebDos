@{
    ViewData["Title"] = "Home Page";
    
}

<body style="background-color:darkgrey">
</body>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/vfx-blog-13-super-estatisticas-video-marketing-para-empresas-twitter-02.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Control de clientes.
                    <a class="btn btn-default" asp-controller="Usuario" asp-action="Login">
                        Loguearse
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/la empresa 1280 x 500.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Control de Contactos.
                    <a class="btn btn-default" asp-controller="Usuario" asp-action="Login">
                        Loguearse
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/94.analise_financeira.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Reporte de problemas.
                    <a class="btn btn-default" asp-controller="Usuario" asp-action="Login">
                        Logearse
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/four_blog_imagem_orcamento.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Crea y organiza reuniones.
                    <a class="btn btn-default" asp-controller="Usuario" asp-action="Login">
                        Logearse
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
</div>
