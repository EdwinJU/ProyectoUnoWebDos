@model IEnumerable<MvcProyecto.Models.ReporteProblema>

@{
    ViewData["Title"] = "Index";
    Layout="_LayoutDos";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TituloProblema)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DetalleProblema)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuienReporto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TituloProblema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DetalleProblema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuienReporto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
